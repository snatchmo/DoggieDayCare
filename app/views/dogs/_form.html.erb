      <h2><%= pluralize(@dog.errors.count, "error") %> prohibited this dog from being saved:</h2>

      <ul>
      <% @dog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control", placeholder: "Dog's Name" %>
  </div>
  <div class="field form-group">
    <%= f.label :breed %><br>
    <%= f.text_field :breed, class: "form-control", placeholder: "Dog's breed" %>
  </div>
  <div class="field form-group">
    <%= f.label :age %><br>
    <%= f.number_field :age, class: "form-control", placeholder: "approximate age in years" %>
  </div>
  <div class="field form-group">
    <%= f.label :owner_id %><br>
    <%= f.collection_select :owner_id, Owner.all, :id, :name  %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
